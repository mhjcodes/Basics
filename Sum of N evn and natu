sum of first N natural no using loop



#include<stdio.h>
int main()
{
    int a,i,b=0,c;
    printf("Enter no");
    scanf("%d",&a);
    for(i=1;i<=a;i++)
    b=b+i;
    printf("%d",b);
    return 0;
}


sum of first N even no using loop


#include<stdio.h>
int main()
{
    int a,i,b=0,c;
    printf("Enter no");
    scanf("%d",&a);
    for(i=2;i<=2*a;i=i+2)
        b=b+i;
    printf("%d",b);
    return 0;
}


sum of first N odd no using loop


#include<stdio.h>
int main()
{
    int a,i,b=0,c;
    printf("Enter no");
    scanf("%d",&a);
    for(i=1;i<=2*a-1;i=i+2)
        b=b+i;
    printf("%d",b);
    return 0;
}

sum of first N sq numbers using loop


#include<stdio.h>
int main()
{
    int a,i,b=0,c;
    printf("Enter no");
    scanf("%d",&a);
    for(i=1;i<=a;i++)
        b=b+i*i;
    printf("%d",b);
    return 0;
}
