syntax


#include<stdio.h>
void input(int **q, int n, int size[]);
void display(int **u, int n, int size[]);
int main()
{
    int a[5],b[6],c[3],d[8];
    int *p[4];
    int size[]= {5,6,3,8};
    p[0] =a;
    p[1] =b;
    p[2] =c;
    p[3] =d;
    input(p,4,size);
    display(p,4,size);
    return 0;
}
void input(int **q, int n, int size[])
{
    int i,j;
    for(i=0;i<n;i++)
    {
        for(j=0;j<size[i];j++)
         scanf("%d",*(q+i)+j);
    }
}
void display(int **u, int n, int size[])
{
    int k,g;
    for(k=0;k<n;k++)
    {
        for(g=0;g<size[k];g++)
        printf("%d ",**(u+k)+g);
        printf("\n");
    }
}


problem


#include<stdio.h>
void input(int **q, int n, int size[]);
void display(int **u, int n, int size[]);
int main()
{
    int a[5],b[6],c[3],d[8];
    int *p[4];
    int size[]= {5,6,3,8};
    p[0] =a;
    p[1] =b;
    p[2] =c;
    p[3] =d;
    input(p,4,size);
    display(p,4,size);
    return 0;
}
void input(int **q, int n, int size[])
{
    int i,j;
    for(i=0;i<n;i++)
    {
        printf("Enter max %d nos:",size[i]);
        for(j=0;j<size[i];j++)
         scanf("%d",*(q+i)+j);
    }
}
void display(int **u, int n, int size[])
{
    int k,g;
    for(k=0;k<n;k++)
    {
        for(g=0;g<size[k];g++)
        printf("%d ",u[k][g]);
        printf("\n");
    }
}
