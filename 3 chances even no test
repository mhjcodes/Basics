#include<stdio.h>
int main()
{
    int a;
    printf("Enter a ev no");
    scanf("%d", &a);
    if(a%2)
    {
        scanf("%d",&a);
        if(a%2)
        {
            scanf("%d",&a);
            if(a%2)
            printf("Game over");
            else
            printf("You win");
        }
        else
        printf("You win");
    }
    else
    printf("You win");
    return 0;
}


