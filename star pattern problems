soln


#include<stdio.h>
int main()
{
    int a,b=0,j,i,e;
    for(i=1;i<=5;i++)
    {
        a=65;
        for(j=1;j<=5;j++)
        {
          if(b)
           {
            printf("  ");
            b--;
           }
          else
           {
            printf("%c ",a);
            a++;
           }
        }
        for(e=1;e<=i;e++)
        b++;
        printf("\n");
    }
    return 0;
}



