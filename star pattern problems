#include<stdio.h>
int main()
{
    int i,j,a=0;
    for(i=1;i<=4;i++)
    {
        for(j=1;j<=5;j++)
        {
            
            if(j<=i)
            {
                a++;
                printf("%d ",a);
                
            }
            else
            printf(" ");
        }
        printf("\n");
    }
    return 0;
}



