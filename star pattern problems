soln 


#include<stdio.h>
int main()
{
    int i,j,a;
    for(i=1;i<=5;i++)
    {
        a=0;
        for(j=1;j<=5;j++)
        {
            
            if(j<=i)
            {
                a++;
                printf("%d",a);
                
            }
            else
            printf(" ");
        }
        printf("\n");
    }
    return 0;
}




