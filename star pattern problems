#include<stdio.h>                                                            
void f1();
int main()
{
  f1();
  return 0;
}
void f1()
{
    int i,j,k,h;
    for(i=1;i<=4;i++)
    {
      k=1;
      h=1;
      for(j=1;j<=7;j++)
      {
        if(j<=5-i || j>=3+i)
            printf("%d",j);
        else
          printf(" ");    
      }
       printf("\n");
    }
}



