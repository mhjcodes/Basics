Lcm of two no


#include<stdio.h>
int main()
{
    int a,b,c;
    printf("Enter two numbers");
    scanf("%d %d",&a,&b);
    c= (a>b)?a:b;
    if (c%a==0 && c%b==0)
        printf("LCM of two nos is %d",c);
    else
    {
        c= a*b;
        printf("LCM of two nos is %d",c);
    }
    return 0;
}

lcm soln 2


#include<stdio.h>
int main()
{
    int a,b,c;
    printf("Enter two nos");
    scanf("%d %d",&a,&b);
    for((c=a>b?a:b);c<=a*b;c++)
    {
        if(c%a==0 && c%b==0)
        {
        printf("LCM is %d",c);
        break;
        }
    }
    return 0;
}



LCM soln 3



#include<stdio.h>
int main()
{
    int a,b,ind=0,L=1,i=2;
    printf("Enter two nos");
    scanf("%d %d",&a,&b);
    while(a>1 || b>1)
    {
        if(a%i==0)
       {
        a/=i;
        ind=1;
       }
        if(b%i==0)
       {
        b/=i;
        ind=1;
       }
        if(ind)
       {
        L=L*i;
        ind=0;
       }
        else
        i++;
    }
    printf("LCM is %d",L);
    return 0;
}




reverse order of no



#include<stdio.h>
int main()
{
    int a,b,c=0;
    printf("Enter a no");
    scanf("%d",&a);
    while(1)
    {
        b=a%10;
        c=c*10+b;
        a=a/10;
        if(a==0)
        break;
    }
    printf("%d",c);
    return 0;
}


HCF of two nos


#include<stdio.h>
int main()
{
    int a,b,c;
    printf("Enter two numbers");
    scanf("%d %d",&a,&b);
    c=a>b?a:b;
    if(c%a==0 && c%b==0)
    printf("%d",a>b?b:a);
    else
    printf("1");
    return 0;
}
