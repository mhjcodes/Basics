#include<stdio.h>
int main()
{
    int i,j;
    for(i=1;i<=5;i++)
    {
        
        for(j=1;j<=5;j++)
        {
            if(j<=6-i)
            printf("*");
            else
            printf(" ");
        }
      printf("\n");
    }
    return 0;
}



input based


#include<stdio.h>
int main()
{
    int i,j,a;
    printf("Enter no of lines");
    scanf("%d",&a);
    for(i=1;i<=a;i++)
    {
        
        for(j=1;j<=a;j++)
        {
            if(j<=a+1-i)
            printf("*");
            else
            printf(" ");
        }
      printf("\n");
    }
    return 0;
}
