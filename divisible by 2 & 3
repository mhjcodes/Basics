#include<stdio.h>
int main()
{
    int a;
    printf("Enter a no");
    scanf("%d", &a);
    if(a %6==0)
    printf("divisible by 2 and 3");
    else
    printf("not divisible by 2 and 3");
    return 0;



}


diff approach using or operator


#include<stdio.h>
int main()
{
   int n;
   printf("Enter no");
   scanf("%d",&n);
   if (n%2 || n%3)
     printf("%d is not divisible by 2 & 3",n);
   else
    printf("%d is divisble by 2 & 3",n);
    return 0;
}
